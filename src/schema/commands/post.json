{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://nvivn.io/post.schema.json",
  "title": "Post",
  "description": "Post a message",
  "type": "object",
  "properties": {
    "message": {
      "description": "The message to post",
      "type": "string"
    },
    "format": {
      "description": "The format of the message body and output (JSON, YAML, etc.)",
      "type": "string"
    },
    "username": {
      "description": "The username of the identity to use for signing and routing",
      "type": "string"
    },
    "type": {
      "description": "The type of the message",
      "type": "string",
      "default": "message"
    }
  },
  "required": ["message"]
}